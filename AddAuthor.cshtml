@model BookStore.Web.Models.Author

<form class="form-container" asp-controller="BookStoreAdmin" asp-action="AddAuthor" method="post">
    <div class="form-group">
        <label for="AuthorName" class="form-label">Book Author Name:</label>
        <input type="text" class="form-control" id="AuthorName" name="AuthorName" value="@Model.AuthorName" required />
        <span asp-validation-for="AuthorName" class="text-danger"></span>
    </div>
    <input type="hidden" id="AuthorId" name="AuthorId" value="@Model.AuthorId" />
    <input type="submit" value="Add Author" class="btn btn-primary" />
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
